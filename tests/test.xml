<?xml version="1.0"?>
<Config>
    <Algorithms>
        <Algorithm>
            <Name>MANUAL</Name>
            <Commands>
                <Command>FORWARD</Command>
                <Command>BACKWARD</Command>
                <Command>STOP</Command>
                <Command>SECOND_STOP</Command>
                <Command>TURN</Command>
            </Commands>
        </Algorithm>
        <Algorithm>
            <Name>EMPTY</Name>
            <Commands>
                <Command>ZERO</Command>
            </Commands>
        </Algorithm>
    </Algorithms>
    <Commands>
        <Command>
            <Name>FORWARD</Name>
            <Params>
                <Param name="speedFrom"/>
            </Params>
        </Command>
        <Command>
            <Name>BACKWARD</Name>
            <Params/>
        </Command>
        <Command>
            <Name>STOP</Name>
            <Params/>
        </Command>
        <Command>
            <Name>SECOND_STOP</Name>
            <Params/>
        </Command>
        <Command>
            <Name>ZERO</Name>
            <Params/>
        </Command>
        <Command>
            <Name>TURN</Name>
            <Params/>
        </Command>
    </Commands>
    <Drivers>
        <Driver>
            <Name>MOTOR</Name>
            <Module>tests/MotorDriver.py</Module>
            <Method>execute</Method>
            <Params>
                <Param name="speedTo"/>
            </Params>
        </Driver>
        <Driver>
            <Name>SERVO</Name>
            <Module>tests/ServoDriver.php</Module>
            <Method>execute</Method>
            <Params/>
        </Driver>
    </Drivers>
    <Interfaces>
        <Interface>
            <Command>FORWARD</Command>
            <Drivers>
                <Driver name="MOTOR">
                    <Params>
                        <Param paramFrom="speedFrom" paramTo="speedTo"/>
                    </Params>
                </Driver>
            </Drivers>
        </Interface>
        <Interface>
            <Command>BACKWARD</Command>
            <Drivers>
                <Driver name="NOT_FOUND">
                    <Params/>
                </Driver>
            </Drivers>
        </Interface>
        <Interface>
            <Command>STOP</Command>
            <Drivers>
                <Driver name="MOTOR">
                    <Params>
                        <Param paramFrom="notFoundFrom" paramTo="notFoundTo"/>
                    </Params>
                </Driver>
            </Drivers>
        </Interface>
        <Interface>
            <Command>SECOND_STOP</Command>
            <Drivers>
                <Driver name="MOTOR">
                    <Params>
                        <Param paramFrom="notFoundFrom" paramTo="speedTo"/>
                    </Params>
                </Driver>
            </Drivers>
        </Interface>
        <Interface>
            <Command>TURN</Command>
            <Drivers>
                <Driver name="SERVO">
                    <Params/>
                </Driver>
            </Drivers>
        </Interface>
    </Interfaces>
</Config>
